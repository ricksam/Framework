using System;
using System.Diagnostics;
using System.Windows.Forms;
using System.Runtime.InteropServices;
using System.IO;

namespace ConsoleTeste
{
    class Program
    {
        static void Main(string[] args)
        {
            Calculo c1 = 5;
            Calculo c2 = 6;
            Calculo c3 = 12;
            Calculo T = c1 + c2 + c3;
            Console.WriteLine(T.Value);
            Console.ReadKey();
        }
    }

  public class Calculo
  {
      public double Value { get; set; }
      public static implicit operator  Calculo(int v)
      {
          return new Calculo() { Value = v }; 
      }

      public static Calculo operator +(Calculo c1, Calculo c2)
      {
          return new Calculo() { Value = c1.Value + c2.Value };
      }
  }
}
